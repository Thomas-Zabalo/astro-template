---
interface Props {
    author: string;
    date: string;
    img: string;
}

const { author, date, img } = Astro.props;
---

<div class="flex items-center flex-wrap gap-4 justify-center">
    <div class="flex gap-1 items-center">
        <figure class="!m-0 overflow-hidden rounded-full w-8 h-8">
            <img
                alt="Author avatar"
                decoding="async"
                loading="lazy"
                src={img}
                class="object-cover w-full h-full"
            />
        </figure>
        <div class="opacity-80 ml-2">{author}</div>
    </div>
    <span>â€¢</span>
    <time class="opacity-80" datetime={date}>{date}</time>
</div>
