---
interface Props {
    author: string;
    date: string;
    img: string;
}

const { author, date, img } = Astro.props;
---

<div class="flex items-center w-full flex-wrap gap-4 justify-center my-6">
    <div class="flex gap-1 mb-auto items-center">
        <figure class="overflow-hidden rounded-full w-8 h-8">
            <img
                alt="Author avatar"
                decoding="async"
                loading="lazy"
                src={img}
                class="object-cover w-full h-full"
            />
        </figure>
        <div class="my-auto opacity-80 ml-2">{author}</div>
    </div>
    <span>â€¢</span>
    <time class="my-auto opacity-80 h-full" datetime={date}>{date}</time>
</div>
