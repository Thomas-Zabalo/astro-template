---
interface Props {
    src: string;
    alt: string;
    caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure>
    <img
        src={src}
        loading="lazy"
        decoding="async"
        alt={alt}
        width="1200"
        height="800"
    />
    <figcaption
        class="mt-1.5 text-xs sm:text-sm text-center italic text-gray-600"
    >
        {caption}
    </figcaption>
</figure>
