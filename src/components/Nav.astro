---
import siteConfig from "src/data/const";

const headerNavLinks = siteConfig.headerNavLinks || [];
---

<nav
    class="l-content mx-auto max-w-3xl min-h-10 pt-4 pb-12 relative sm:min-h-14 sm:pb-24 md:pt-8"
>
    <div class="w-full max-w-3xl mx-auto relative">
        <button
            class="menu-toggle w-8 h-8 -ml-1 flex items-center justify-center relative z-30 md:hidden"
            aria-label="Open Menu"
            aria-expanded="false"
            aria-controls="menu-items"
        >
            <span class="menu-toggle-icon w-6 h-px relative bg-current"></span>
        </button>
        <ul id="menu-items" class="menu flex gap-6 justify-between">
            <div>
                <li class="py-1">
                    <a
                        class="text-xl font-serif text-main hover:underline hover:underline-offset-2 hover:decoration-1 md:text-base"
                        href=`/`
                    >
                        Portoflio
                    </a>
                </li>
            </div>
            <div class="menu flex gap-6">
                {
                    headerNavLinks.map((link, index) => (
                        <li class="py-1">
                            <a
                                class="text-xl font-serif text-main hover:underline hover:underline-offset-2 hover:decoration-1 md:text-base"
                                href={link.href}
                            >
                                {link.text}
                            </a>
                        </li>
                    ))
                }
                <li class="py-1 flex">
                    <a
                        class="text-xl font-serif text-main hover:underline hover:underline-offset-2 hover:decoration-1 md:text-base"
                        href="https://github.com/Thomas-Zabalo/astro-template"
                    >
                        Github
                    </a>
                </li>
            </div>
        </ul>
    </div>
</nav>
