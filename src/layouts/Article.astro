---
// Layout for pages such as articles or documents
// Nested in Base layout

import Base from "@/layouts/Base.astro";

interface Props {
  title?: string;
  description?: string;
  frontmatter?: undefined;
}

const { title, description } = Astro.props.frontmatter || Astro.props;
---

<Base {title} {description}>
  <article>
    <slot />
  </article>
</Base>

<style>
  article {
    > * {
      margin-block: 1.2em 0;
      margin-inline: 0;
    }

    p {
      font-weight: 400;
    }

    h2 {
      font-size: 2.125rem;
      text-align: center;
    }

    h3 {
      margin-block: 3em 0;
      padding-block-end: 0.2em;
      border-inline-start: 4px solid var(--color-accent);
      background-color: var(--color-ambient);
      padding: 1rem;
      padding-inline-start: var(--sp-s);
      line-height: 1.4;
      font-size: 1.125rem;
      font-weight: 600;
    }

    h4 {
      margin-block: 2em 0;
      padding-block-end: 0.2em;
      line-height: 1.4;
      font-size: 1.4rem;
      border-block-end: 1px solid
        color-mix(in srgb, var(--color-main) 10%, transparent);
    }

    h5 {
      margin-block: 2em -0.4em;
      line-height: 1.4;
      font-size: 1.1rem;
    }

    ul {
      list-style: disc;
      padding-inline-start: 1.5em;
    }
    ol {
      list-style: decimal;
      padding-inline-start: 1.5em;
    }
    li {
      margin-block: 0 0.5em;
      line-height: 1.4;
      ul,
      ol {
        margin-block: 0.5em 0;
      }
      ul {
        list-style: circle;
      }
      ol {
        list-style: decimal;
      }
    }

    dl {
      dt {
        margin-block-start: 1em;
        font-weight: 700;
        font-size: 1.1rem;
        &::after {
          content: " :";
          opacity: 0.4;
        }
      }
    }

    table {
      width: 100%;
      th,
      td {
        border: 1px solid color-mix(in srgb, var(--color-main) 20%, transparent);
        padding-block: 0.4em;
        padding-inline: 0.8em;
      }
      th {
        background: color-mix(in srgb, var(--color-main) 20%, transparent);
      }
      tr:nth-child(even) td {
        background: color-mix(in srgb, var(--color-main) 2%, transparent);
      }
    }

    b {
      font-weight: 700;
    }

    strong {
      background: linear-gradient(
        transparent 60%,
        color-mix(in srgb, var(--color-theme) 20%, transparent) 40%
      );
    }

    :not(pre) code {
      font-family: Consolas, "Courier New", Courier, Monaco, monospace;
      color: var(--color-theme);
      background-color: hsl(224, 14%, 16%);
      padding-block: 0.2em;
      padding-inline: 0.4em;
      margin-block: auto;
      margin-inline: 0.2em;
      border-radius: 2px;
      font-size: 0.9rem;
      vertical-align: 0.2em;
    }

    blockquote {
      font-style: italic;
      color: color-mix(in srgb, var(--color-main) 80%, transparent);
      background: color-mix(in srgb, var(--color-main) 5%, transparent);
      padding: 1em;
      border-inline-start: 2px solid
        color-mix(in srgb, var(--color-main) 10%, transparent);
      p {
        margin: 0;
      }
    }

    small {
      font-size: 0.9rem;
      opacity: 0.8;
      &.reference {
        width: 100%;
        text-align: right;
        display: block;
        margin-block-start: 0.4em;
        a {
          color: color-mix(in srgb, var(--color-main) 40%, transparent);
          text-decoration: underline;
        }
      }
    }

    hr {
      border: 0;
      margin-block: 6em 4em;
      border-block-start: 1px dashed
        color-mix(in srgb, var(--color-main) 40%, transparent);
    }

    a {
      text-decoration: underline;
      color: var(--color-theme);
      font-weight: 500;
      &:visited {
        filter: brightness(80%);
      }
    }

    pre {
      direction: ltr;
      padding: 1em;
    }

    details {
      background-color: color-mix(in srgb, var(--color-main) 8%, transparent);
      border: 0.12em solid
        color-mix(in srgb, var(--color-main) 10%, transparent);
      padding: var(--sp-s);
      border-radius: 10px;
      overflow: hidden;
      p:empty {
        display: none;
      }

      & summary {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        display: block;
        position: relative;
        margin: calc(-1 * var(--sp-s));
        padding: var(--sp-s);
        padding-inline-start: calc(var(--sp-s) + 1.8em);
        cursor: pointer;
        background-color: var(--color-base);
        line-height: 1.2;
        &::-webkit-details-marker {
          display: none;
        }
        &::before {
          content: "";
          display: block;
          position: absolute;
          inset: var(--sp-s);
          width: 1.2em;
          aspect-ratio: 1;
          background: color-mix(in srgb, var(--color-main) 20%, transparent);
          clip-path: polygon(
            10% 35%,
            50% 75%,
            90% 35%,
            80% 25%,
            50% 55%,
            20% 25%
          );
          transition: 0.2s linear;
          transform-origin: center;
        }
      }

      &[open] summary {
        text-overflow: unset;
        white-space: unset;
        margin-block-end: var(--sp-s);
        &::before {
          rotate: x 180deg;
        }
      }
    }

    .footnotes {
      margin-block-start: 8em;
      padding-block-start: 2em;
      border-block-start: 1px solid
        color-mix(in srgb, var(--color-main) 20%, transparent);
      h2 {
        display: none;
      }
      a {
        &::before {
          content: " [";
        }
        &::after {
          content: "]";
        }
        text-decoration: none;
        opacity: 0.8;
      }
    }
  }
</style>
