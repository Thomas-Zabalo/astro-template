---
import Layout from "@layouts/Layout.astro";
---

<Layout title="Error 404" description="Sorry, the article you're trying to access does not exist. You might want to explore other articles or return to the home page.">
    <div class="flex flex-col items-center h-screen">
        <h1 class="text-5xl font-bold mb-4">404 - Page Not Found</h1>
        <p class="text-xl text-gray-600">
            Oops! The page you're looking for does not exist.
        </p>
        <a href="/" class="text-blue-500 mt-4 hover:underline"
            >Go back to home page</a
        >
    </div>
</Layout>
