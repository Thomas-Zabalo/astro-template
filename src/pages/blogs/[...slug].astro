---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";

export async function getStaticPaths() {
    const projectEntries = await getCollection("blogs");
    return projectEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description}>
    <Content />
</Layout>

<style is:global>
    nav ul li {
        list-style-type: none;
        padding: 0;
    }
    h1 {
        text-align: center;
        font-size: 1.875rem;
        line-height: 1.25;
        font-family: serif;
        font-weight: 500;
    }

    h2 {
        font-size: 1.2em;
        margin-top: 1.875em;
        margin-bottom: 1em;
        line-height: 1.2;
        font-weight: 800;
    }
    h3 {
        padding-inline-start: 3rem;
        margin-top: 1.875em;
        margin-bottom: 1em;
        line-height: 1.2;
        font-weight: 800;
    }
    ol li {
        margin: 0.8em 0;
        list-style-type: decimal;
        padding-inline-start: 20px;
        line-height: 1.2;
    }

    ul li {
        margin: 0.8em 0;
        list-style-type: georgian;
        padding-inline-start: 20px;
        color: var(--color-text);
    }

    main a {
        color: var(--color-text);
        text-decoration: underline wavy;
    }
    main a:hover {
        color: white;
        text-decoration: underline wavy;
    }
    li strong {
        color: var(--color-dot);
        padding: 2px 5px;
        border-radius: 4px;
    }
    em {
        display: block;
        position: relative;
        font-style: normal;
        font-size: 1.3em;
        margin-block-end: var(--sp-m);
    }
    h2 strong {
        position: relative;
        padding-right: var(--sp-s);
    }
    code {
        border-radius: 2px;
        background-color: var(--color-code);
        padding: 1px 5px;
        font-family: "Noto Sans";
    }
    @media (min-width: 640px) {
        h1 {
            font-size: 3rem;
            line-height: 1.2;
        }

        h2 {
            font-size: 1.6em;
            margin-top: 1.875em;
            margin-bottom: 1em;
            line-height: 1.2;
        }
    }
</style>
